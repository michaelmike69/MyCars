<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="yangm.mycars.PreferencesActivity"
    tools:showIn="@layout/activity_preferences">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false"
            android:clickable="false"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sort cars:"
                android:id="@+id/lblSortCars"
                android:layout_below="@+id/chkMake"
                android:layout_toRightOf="@+id/chkYear"
                android:layout_toEndOf="@+id/chkYear"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Notifications:"
                android:id="@+id/lblNotifyPromptStr"
                android:layout_below="@+id/rgrpSort"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:id="@+id/chkYear"
                android:checked="false"
                android:layout_above="@+id/lblSortCars"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make"
                android:id="@+id/chkMake"
                android:checked="false"
                android:layout_below="@+id/lblListOptionsPromptStr"
                android:layout_toRightOf="@+id/chkYear"
                android:layout_toEndOf="@+id/chkYear"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp" />

            <RadioGroup
                android:id="@+id/rgrpSort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lblSortCars"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:baselineAligned="false"
                android:clickable="false"
                android:focusable="false"
                android:measureWithLargestChild="false">

                <RadioButton
                    android:id="@+id/rbtnAZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/rbtnAZStr"
                    android:layout_alignTop="@+id/rbtnZA"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioButton
                    android:id="@+id/rbtnZA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/rbtnZAStr"
                    android:layout_below="@+id/chkYear"
                    android:layout_alignRight="@+id/lblNotifyPromptStr"
                    android:layout_alignEnd="@+id/lblNotifyPromptStr" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="When listing cars, include:"
                android:id="@+id/lblListOptionsPromptStr"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warn before deleting a car"
                android:id="@+id/swchWarnDelete"
                android:checked="true"
                android:layout_below="@+id/lblNotifyPromptStr"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnCancel"
            android:onClick="btnCancelOnClick" />

    </LinearLayout>

</RelativeLayout>
